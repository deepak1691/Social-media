<%- include('./boilerplate/head.ejs') %>
<body>
<%- include('./boilerplate/navbar.ejs') %>

<div class="container">

  <!-- Profile Header -->
  <div class="profile-header">
    <div class="profile-image">
      <img src="<%= userInfo.profileImage || " " %>" alt="Profile Image">
    </div>
    <div class="profile-details">
      <div class="username">
        <h2>@<%= userInfo.name %></h2>
        <a href="/<%= userInfo.id %>/post" class="btn">Create a Post</a>
      </div>
      <ul class="profile-stats">
        <li><strong><%= data.length %></strong> posts</li>
        <li><strong>120</strong> followers</li>
        <li><strong>180</strong> following</li>
      </ul>
      <p><a href="/allfriends">friends</a></p>
      <div class="bio">
        This is your bio. ðŸŒŸ Share your story here.
      </div>
    </div>
  </div>

  <!-- Highlights -->
  <div class="highlights">
    <div class="highlight">Story 1</div>
    <div class="highlight">Story 2</div>
    <div class="highlight">Story 3</div>
    <div class="highlight add">+</div>
  </div>

  <!-- Posts Grid -->
  <% if(data.length > 0){ %>
    <div class="post-grid">
      <% for (const el of data) { %>
        <div class="post-item">
          <img src="/uploads/<%= el.post %>" alt="Post">
        </div>
      <% } %>
    </div>
  <% } else { %>
    <p class="no-posts">There are no posts yet...</p>
  <% } %>

</div>

</body>
</html>
